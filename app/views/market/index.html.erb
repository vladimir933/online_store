<!DOCTYPE html>
<html>
  <body>
    <%= render partial: 'plug_in/navigation' %>
    <% if @user && @user.role == 'Продавец' %>
      <%= button_to 'Добавить товар', new_item_path, method: :get %><br>
    <% end %>
      
      <% @items.each do |item| %>
        <div class='form-control'>
          
          <h4>
            <%= link_to item.name, item_path(item), method: :get %>
          </h4>

          <% if item.avatar.attached? %>
            <%= image_tag item.avatar, width: '120px' %><br>
          <% end %>

          <b>
            Описание товара:
          </b><br>
          <i>
            <%= item.description %><br>
          </i>
          
          <b>
            Цена:
          </b>
          <i>
            <%= item.price %>
          </i>
          <br>
          <% if @user && item.user_id == @user.id %>
            <%= link_to 'Изменить', edit_item_path(item), method: :get %>
            <%= link_to 'Удалить', item, method: :delete %>
          <% end %>
          <% if @user %>
            <%= button_to 'Добавить товар в корзину', { controller: :market, action: :create, id: item } %>
            <%= button_to 'Удалить товар из корзины', { controller: :market, action: :destroy, id: item }, method: :delete %>
          <% end %>        
        </div>        
      <% end %>
      

  </body>
</html>